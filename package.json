{
  "name": "sawglab",
  "version": "1.0.0",
  "description": "Playwright project with Prettier formatting",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf ./allure-results ./allure-report",
    "test": "npm-run-all clean test:run",
    "test:run": "npx playwright test",
    "test:standard": "npm-run-all clean test:standard:run",
    "test:standard:run": "npx playwright test --project=standard-user",
    "test:performance": "npm-run-all clean test:performance:run",
    "test:performance:run": "npx playwright test --project=performance-glitch-user",
    "test:locked": "npm-run-all clean test:locked:run",
    "test:locked:run": "npx playwright test --project=locked-out-user",
    "allure:report": "npx allure generate \"./allure-results\" --clean -o \"./allure-report\" && npx allure open \"./allure-report\"",
    "test:all:report": "npm-run-all test allure:report",
    "test:standard:report": "npm-run-all test:standard allure:report",
    "test:performance:report": "npm-run-all test:performance allure:report",
    "test:locked:report": "npm-run-all test:locked allure:report"
  },
  "keywords": [],
  "author": "Dipa Vhoumik",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.5.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
